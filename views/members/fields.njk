<div class="item">
      <div> Avatar </div>
      <div> 
        <input type="url" name="avatar_url" placeholder="http://" value="{{member.avatar_url }}"/>
      </div>
    </div>

    <div class="item">
      <div> Name </div>
      <div> 
        <input type="text" name="name" placeholder="name" value="{{member.name}}" />
      </div>
    </div>

    <div class="item">
      <div> Email </div>
      <div> 
        <input type="email" name="email" placeholder="Email" value="{{member.email}}" />
      </div>
    </div>

    <div class="item">
      <div> Date of birth </div>
      <div> 
        <input type="date" name="birth" value="{{ member.birth }}">
      </div>
    </div>

    <div class="item">
      <div> Sex </div>
      <div id="direction-box"> 
        <span class="choice-box">
          <input 
          type="radio" 
          name="gender" 
          value="M" 
          {% if instructor.gender == 'M' %}
          checked
          {% endif %}} />Male 
        </span>
        <span class="choice-box">
          <input 
          type="radio" 
          name="gender" 
          value="F" 
          {% if instructor.gender == 'F' %}
          checked
          {% endif %}} />Female
        </span>
        
      </div>
    </div>

    <div class="item">
      <div> Blood Type </div>
      <div>
        <select name="blood" >
          <option value="A+" 
          {% if member.blood == "A+" %} selected {% endif %}> 
            A+
          </option>

          <option value="A-" 
          {% if member.blood == "A-" %} selected {% endif %}> 
            A-
          </option>

          <option value="B+" 
          {% if member.blood == "B+" %} selected {% endif %}>
            B+
          </option>

          <option value="B-" 
          {% if member.blood == "B-" %} selected {% endif %}>
            B-
          </option>

          <option value="AB+"
          {% if member.blood == "AB+" %} selected {% endif %}>
            AB+
           </option>

          <option value="AB-"
          {% if member.blood == "AB-" %} selected {% endif %}>
            AB-
           </option>

          <option value="O+" 
          {% if member.blood == "O+" %} selected {% endif %}>
            O+
          </option>

          <option value="O-" 
          {% if member.blood == "O-" %} selected {% endif %}>
            O-
          </option>
          
        </select>
      </div>
    </div>

    <div class="item">
      <div> Weight (kg) </div>
      <div> 
        <input type="number" name="weight" value="{{ member.weight }}">
      </div>
    </div>

    <div class="item">
      <div> Height (cm) </div>
      <div> 
        <input type="number" name="height" value="{{ member.height }}">
      </div>
    </div>

    <button type="submit">Salvar</button>